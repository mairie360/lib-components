{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "local-storybook": "npx serve ./storybook-static -l 8080",
    "lhci:urls": "node scripts/generate-lhci-urls.js",
    "lhci:run": "lhci autorun --config=./lighthouserc.js",
    "lhci:check": "node scripts/check-accessibility.js",
    "lhci:test": "lhci collect --config=./lighthouserc.js && node scripts/check-accessibility.js",
    "lighthouse": "npm run build-storybook && npm run lhci:urls && npm run lhci:run && npm run lhci:check",
    "chromatic": "npx chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}"
  },
  "dependencies": {
    "next": "15.3.1",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@lhci/cli": "^0.14.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/experimental-nextjs-vite": "^8.6.12",
    "@storybook/nextjs": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "chromatic": "^11.28.2",
    "daisyui": "^5.0.35",
    "playwright": "^1.52.0",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.5",
    "typescript": "^5",
    "vitest": "^3.1.2",
    "wait-on": "^8.0.3"
  }
}
